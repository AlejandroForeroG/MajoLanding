---
import {useState} from 'react'
interface Props {
    src: string;
    title: string;
    description: string;
}

const {src,title,description} = Astro.props
---
<li class="mb-4">
    <div class="flex flex-col gap-2 text-zinc-800 bg-lime-200 p-5 rounded-lg">
        <img src={src} alt={title} class="rounded-md cursor-pointer" />
        <div class="flex flex-col">
            <h4 class="text-xl font-semibold"><span class="italic">{title}</span></h4>
            <p class="text-sm">"{description}"</p>
        </div>
    </div>
</li>

